<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:fontFamily">@font/gillsans</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:layout_marginStart">@dimen/high_margin</item>
        <item name="android:layout_marginTop">@dimen/high_margin</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CommonButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/high_margin</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/gotham_narrow</item>
    </style>

</resources>